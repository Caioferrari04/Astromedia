@{
    Layout = "Index";
    ViewData["Title"] = "Editar senha";
}
@model UsuarioDTO

<form class="cad-content text-light" method="post" asp-action="UpdatePassword" asp-controller="ConfigurationUser">
    <div class="container container-cad text-justify">
        <div asp-validation-summary="ModelOnly" class="text-error"></div>

        <div class="row">
            <label class="col" asp-for="SenhaAtual">
                <div class="password-box-cad">
                    @Html.DisplayNameFor(m => m.SenhaAtual)
                </div>
                <div class="row inputbox-password">
                    <input id="inputbox-pass1" class="col-11 inputbox-password-cad" asp-for="SenhaAtual" required>
                    <div onclick="showPassword(event)" class="col btn-show-password-cad is-vertical-align is-horizontal-align">
                        <img id="show-password1" src="https://icongr.am/clarity/eye.svg?size=128&color=d2d6dd"></img>
                    </div>
                </div>
            </label>
        </div>
        
            <div class="row">
            <label class="col" asp-for="Senha">
                <div class="password-box-cad">
                    @Html.DisplayNameFor(m => m.Senha)
                </div>
                <div class="row inputbox-password">
                    <input id="inputbox-pass2" class="col-11 inputbox-password-cad" asp-for="Senha" required>
                    <div onclick="showPassword(event)" class="col btn-show-password-cad is-vertical-align is-horizontal-align">
                        <img id="show-password2" src="https://icongr.am/clarity/eye.svg?size=128&color=d2d6dd"></img>
                    </div>
                </div>
                <div class="input-desc small">
                    <p>Sua senha deve conter pelo menos 6 caracteres, uma letra maiuscula, um dos seguintes caracteres "-", "_" e n√∫meros. Sem caracteres especiais.</p>
                </div>
            </label>
        </div>

        <div class="row">
            <label class="col" asp-for="ConfirmarSenha">
                <div class="password-box-cad">
                    @Html.DisplayNameFor(m => m.ConfirmarSenha)
                </div>
                <div class="row inputbox-password">
                    <input id="inputbox-pass3" class="col-11 inputbox-password-cad" asp-for="ConfirmarSenha" required>
                    <div onclick="showPassword(event)" class="col btn-show-password-cad is-vertical-align is-horizontal-align">
                        <img id="show-password3" src="https://icongr.am/clarity/eye.svg?size=128&color=d2d6dd"></img>
                    </div>
                </div>
            </label>
        </div>

        <div class="row">
            <div class="col">
                <button type="submit" class="col submit-btn-cad button is-vertical-align is-horizontal-align">Salvar</button>
            </div>
        </div>
    </div>
</form>

<script src="~/js/configuracoes-tab.js" asp-append-version="true"></script>
<script>mostrarAba(1)</script>
