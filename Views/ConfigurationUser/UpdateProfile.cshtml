@{
    Layout = "Index";
    ViewData["Title"] = "Editar perfil";
}
@model UsuarioDTO

<form class="cad-content text-light" enctype="multipart/form-data" method="post" asp-action="UpdateProfile" asp-controller="ConfigurationUser">

    <div class="container container-cad">
        <div asp-validation-summary="ModelOnly" class="text-error"></div>
        
        <div class="row">
            <label class="col" asp-for="Nome">
                @Html.DisplayNameFor(m => m.Nome)
                <div class="input-desc">
                    <small>Seu nome de usuário deve conter pelo menos 4 caracteres, 
                    e no máximo 15 caracteres. Sem caracteres especiais.</small>
                </div>
                <input class="inputbox-cad" asp-for="Nome">
            </label>
        </div>

        <div class="row">
            <label class="col" asp-for="Email">
                @Html.DisplayNameFor(m => m.Email)
                <input class="inputbox-cad" asp-for="Email">
            </label>
        </div>

        <div class="row">
            <label class="col" asp-for="DataNascimento">
                @Html.DisplayNameFor(m => m.DataNascimento)
                <input class="inputbox-cad" asp-for="DataNascimento">
            </label>
        </div>

        <div class="row">
            @* <label class="col" asp-for="FotoPerfil">
                @Html.DisplayNameFor(m => m.FotoPerfil)
                <input type="file" class="inputbox-cad" >
            </label> *@

            @* <label for="formFile" class="form-label col" asp-for="FotoPerfil">
                Foto de perfil
                <input class="form-control" type="file"  accept="image/png, image/gif, image/jpeg" id="formFile" asp-for="FotoPerfil">
            </label> *@
            <label class="text-light col" asp-for="FotoPerfil">
                @Html.DisplayNameFor(m => m.FotoPerfil)
                <input asp-for="FotoPerfil" accept="image/png, image/gif, image/jpeg"/>
            </label>
            
            <label class="text-light col" asp-for="FotoBackground">
                @Html.DisplayNameFor(m => m.FotoBackground)
                <input asp-for="FotoBackground" accept="image/png, image/gif, image/jpeg"/>
            </label>
        </div>

        <div class="row">
            <label asp-for="Bio" class="col">
                @Html.DisplayNameFor(el => el.Bio)
                <textarea asp-for="Bio" style="resize: vertical; background-color: #fff; color: #000"></textarea>
            </label>
        </div>

        <button type="submit" class="col submit-btn-cad button is-vertical-align is-horizontal-align">Editar</button>
    </div>
</form>

<script src="~/js/configuracoes-tab.js" asp-append-version="true"></script>
<script>mostrarAba(0)</script>