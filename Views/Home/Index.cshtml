@{
    ViewData["Title"] = "Página inicial";
}

@section stylesheet {
    <link rel="stylesheet" href="~/css/loginmodal.css">
}

@section modal {
    <div id="login-modal"></div>
}

<div class="card">
    <header>
        <h4>Bem vindo :)</h4>
    </header>
    <p>Não tem nada aqui por enquanto :)</p>
    <footer class="is-right">
        <a id="loginmodalbtn" class="button primary">Login</a>
        <a asp-action="Index" asp-controller="SignIn" class="button">Cadastro</a>
    </footer>
</div>

@section scripts {
    <script>
        const loginmodalurl = '@Url.Action("RenderLoginModal", "SignIn")';
        $('#loginmodalbtn').click(function() {
            $('#login-modal').load(loginmodalurl);
            $('#login-modal').show();
        })

        $(window).click(function(event) {
            if (event.target == modalblock) {
                $('#login-modal').hide();
            }
        })
    </script>
} 

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>