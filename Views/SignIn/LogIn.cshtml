@model UsuarioDTO

<div id="modalblock" class="modal container is-vertical-align is-horizontal-align">
    <form class="modal-content animatein text-light col-5" action="Index" method="post">
        <div class="container logo-box row is-vertical-align is-horizontal-align">
            <img class="img-logo col" src="../img/logo-small-bgless.png" alt="minorlogo" class="minlogo">
            <h2 class="col">Entrar</h2>
        </div>

        <div class="container">
            <div class="row">
                <label class="col" asp-for="Nome">Nome de Usu√°rio
                    <input class="inputbox" type="text" name="Nome" autocomplete="off" required>
                </label>
            </div>

            <div class="row">
                <label class="checklabel col" asp-for="Senha">Senha
                    <a class="fpassword pull-right" asp-action="" asp-controller="">Esqueci minha senha</a>
                    <input class="inputbox" type="password" name="Senha" autocomplete="off" required>
                </label>
            </div>

            <div class="row">
                <div class="col">
                    <label asp-for="LembrarMe">
                        <input type="checkbox" name="lembrar">Lembrar minha senha
                    </label>
                    <button type="submit" class="col submit-btn button outline is-vertical-align is-horizontal-align">Entrar</button>
                </div>
            </div>
        </div>
    </form>
</div>