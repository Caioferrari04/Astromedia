@model UsuarioDTO

<div id="modalblock" class="modal container is-vertical-align is-horizontal-align">
    <form class="modal-content animatein text-light col-5" asp-action="Login" asp-controller="SignIn">
        <div class="container logo-box row is-vertical-align is-horizontal-align">
            <img class="img-logo col" src="../img/logo-small.png" alt="minorlogo" class="minlogo">
            <h2 class="col logo-text">Entrar</h2>
            <img class="is-vertical-align is-horizontal-align close-btn col" src="../img/close-icon.svg" alt="Close Icon">
        </div>

        <div class="container">
            <div asp-validation-summary="ModelOnly" class="text-error"></div>
            
            <div class="row">
                <label class="col" asp-for="Nome">
                    @Html.DisplayNameFor(m => m.Nome)
                    <input class="inputbox" asp-for="Nome" required>
                </label>
            </div>

            <small><span asp-validation-for="Senha" class="text-error"></span></small>
            <div class="row">
                <label class="checklabel col" asp-for="Senha">
                    <div class="password-box">
                        @Html.DisplayNameFor(m => m.Senha)
                        <a class="fpassword" asp-action="" asp-controller="">Esqueci minha senha</a>
                    </div>
                    <input class="inputbox" asp-for="Senha" required>
                </label>
            </div>

            <div class="row">
                <div class="col">
                    <label asp-for="LembrarMe" class="is-vertical-align">
                        <input asp-for="LembrarMe">Lembrar minha senha
                    </label>
                    <button type="submit" class="col submit-btn button outline is-vertical-align is-horizontal-align">Entrar</button>
                </div>
            </div>
        </div>
    </form>
</div>

