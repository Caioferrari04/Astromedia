@model ResetPassword
@{
    ViewData["Title"] = "Recuperar senha";
}

@section stylesheet {
    <style>
        body {
            background-image: url(https://images.pexels.com/photos/998641/pexels-photo-998641.jpeg?auto=compress&cs=tinysrgb&w=1600);
            background-repeat: no-repeat;
            background-size: cover;
        }

        .modal-content {
            padding: 10px 5px 30px 5px !important;
        }

        p {
            margin-right: 20px;
        }

    </style>
    <link rel="stylesheet" href="~/css/EmailRecPassword.css" asp-append-version="true">
}

<div id="modalblock" class="container is-vertical-align is-horizontal-align">
    <div class="modal-content text-light col-5">
        <div class="container logo-box row is-vertical-align is-horizontal-align">
            <img class="img-logo col-2" src="../img/logo-small.png" alt="minorlogo" class="minlogo">
            <h2 class="col logo-text">Senha Alterada</h2>
        </div>

        <p class="password-confirmation">Sua senha foi redefinida com sucesso. Clique <a asp-action="LogInView">aqui</a> para fazer o login</p>
    </div>
</div>